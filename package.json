{
  "name": "lieng-2026",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "concurrently -n client,server -c blue,green \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "cd packages/client && bunx vite",
    "dev:server": "bun --watch packages/server/src/index.ts",
    "build": "bun run --filter @lieng/client build",
    "typecheck": "tsc --noEmit -p tsconfig.base.json",
    "test": "bun run --filter @lieng/shared test"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0"
  }
}
